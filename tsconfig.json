{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",

    /* Interoperability Options */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness Options */
    "strict": true,
    "skipLibCheck": true
  }
}